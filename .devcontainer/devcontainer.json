{
  "name": "KV Cache Profiler with GPU Support",
  "image": "nvidia/cuda:12.6-devel-ubuntu24.04",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.13"
    },
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "runArgs": [
    "--gpus=all",
    "--shm-size=2g"
  ],
  "postCreateCommand": "curl -LsSf https://astral.sh/uv/install.sh | sh && export PATH=\"/home/vscode/.local/bin:$PATH\" && uv sync",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.black-formatter",
        "ms-python.mypy-type-checker"
      ]
    }
  },
  "forwardPorts": [],
  "remoteUser": "vscode"
}
